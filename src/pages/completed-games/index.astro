---
import BaseLayout from '../../layouts/BaseLayout.astro'
import ReviewCard from '../../components/ReviewCard.astro'

import { getCollection } from 'astro:content'
const gameReviewEntries = await getCollection('completed-games')

// sort content by review publish date
const sortedPost = gameReviewEntries.sort(
  (a, b) => b.data.reviewPubDate - a.data.reviewPubDate
)
---

<BaseLayout title="My Completed Games">
  <div class="container mx-auto px-6 md:px-0 grid justify-items-center mt-12">
    <div class="max-w-lg">
      <h1
        class="font-bold text-2xl md:text-3xl tracking-tight text-center mb-3"
      >
        🎮📺 My Completed Games 🕹️✈️
      </h1>
      <p class="text-center md:text-lg tracking-tight">
        Project menamatkan beberapa game RPG/JRPG/Story based di tahun
        2024-2025.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 md:gap-4 my-6 md:my-12">
      {sortedPost.map((post) => <ReviewCard post={post} />)}
    </div>

    <div
      class="grid items-center bg-teal-900 shadow-lg shadow-teal-300 max-w-lg my-12 border border-gray-800 rounded-xl"
    >
      <p class="text-center text-gray-100 p-4 tracking-tight">
        Ini adalah penilaian amatir saya sendiri, mohon maaf jika ada kesalahan
        dan kata-kata yang tidak jelas. jika kalian ada masukan sangat saya
        terima
      </p>
    </div>
  </div>
</BaseLayout>
