---
import { Image } from 'astro:assets'

const { github, author } = Astro.props
---

<section class="py-24 grid justify-items-center mb-32">
  <a href={`https://github.com/${github}`} target="_blank">
    <Image
      src="https://avatars.githubusercontent.com/bulukucing"
      alt={`${author} Profile`}
      inferSize={true}
      class="rounded-full h-48 w-48 mb-6 border-2 border-teal-500 transition transition-1000 hover:border-teal-800 hover:shadow-lg hover:shadow-orange-600 cursor-pointer"
    />
  </a>

  <div class="max-w-xl text-center">
    <h1 class="text-2xl font-extrabold mb-2">Bulu Kucing's Website</h1>
    <p class="text-medium">Seorang yang hobi coding dan gaming</p>
  </div>
</section>
